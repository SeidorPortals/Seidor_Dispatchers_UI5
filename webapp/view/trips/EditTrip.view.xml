<mvc:View 
	controllerName="com.seidor.usa.dispatchers.controller.trips.EditTrip" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:table="sap.ui.table" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" 
	xmlns="sap.m" 
	class="sapUiSizeCompact">
    <App>
        <Page showHeader="false">
            <Toolbar id="idToolbar">
                <Button id="idBtnBkNvoPeaje" type="Back" press="onBackReport"/>
                <Text text="Trip # 1000001 - Status: GO" />
                <ToolbarSpacer  id="idTS2"/>
                <Button id="btnSaveTrip" icon="sap-icon://save" press="onSaveTrip" visible="true"/>
                <Button id="btnCancelEditTrip" icon="sap-icon://reset" press="onCancelEditTrip" visible="true"/>
            </Toolbar>
            <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
                <f:Form id="FormChange480_12120" editable="true">
                    <f:layout>
                        <f:ResponsiveGridLayout id="_IDGenResponsiveGridLayout1" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0"
                            emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="1" singleContainerFullSize="false"/>
                    </f:layout>
                    <f:formContainers>
                        <f:FormContainer id="_IDGenFormContainer1" title="Informacion General">
                            <f:formElements>
                                <f:FormElement id="labelIdTrip" label="Id">
                                    <f:fields>
                                        <Input id="inpIdTrip"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement id="_IDGenFormElement1" label="Nombre">
                                    <f:fields>
                                        <Input id="inpNameTrip" required="true" >
                                            <customData>
                                                <core:CustomData key="required" value="true" writeToDom="true"/>
                                            </customData>
                                        </Input>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement id="_IDGenFormElement2" label="Estado">
                                    <f:fields>
                                        <CheckBox id="idCBEstado" valueState="Information" />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement id="_IDGenFormElement3" label="FeedBack">
                                    <f:fields>
                                        <Input id="inpNameSupplierTrip"/>
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                    </f:formContainers>
                </f:Form>
            </VBox>
        </Page>
    </App>
</mvc:View>