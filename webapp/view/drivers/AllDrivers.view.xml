<mvc:View 
	controllerName="com.seidor.usa.dispatchers.controller.drivers.AllDrivers" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:table="sap.ui.table" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" 
	xmlns="sap.m" 
	class="sapUiSizeCompact">
    <App>
        <table:Table id="tAllDrivers" rows="{/mDataDrivers}" selectionMode="single" selectionBehavior="RowOnly" selectionChange="onSaveToll" visibleRowCount="14" ariaLabelledBy="title">
            <table:extension>
                <OverflowToolbar id="idOT">
                    <ToolbarSpacer id="idTS"/>
                    <SearchField id="idSearchManifiesto" placeholder="Buscar" value="{ui>/filterValue}" search="onHandleTxtFilter($event, 'idSearchManifiesto')" width="20rem"/>
                    <Button id="idBtnAddDrivers" icon="sap-icon://add" press="onCreateDrivers" tooltip="Add">
                        <layoutData>
                            <OverflowToolbarLayoutData id="idOTLAddDrivers" priority="NeverOverflow"/>
                        </layoutData>
                    </Button>
                    <Button id="idBtnEditDrivers" icon="sap-icon://edit" press="onEditDrivers" tooltip="Edit">
                        <layoutData>
                            <OverflowToolbarLayoutData id="idOTLEditDrivers" priority="NeverOverflow"/>
                        </layoutData>
                    </Button>
                    <Button id="btnDownloadExcelDrivers" icon="sap-icon://excel-attachment" press="onExportExcel" tooltip="Export Excel">
                        <layoutData>
                            <OverflowToolbarLayoutData priority="NeverOverflow"/>
                        </layoutData>         
                    </Button>
                </OverflowToolbar>
            </table:extension>
            <table:noData>
                <Link id="idLink" class="sapUiMediumMargin" text="No se encuentran datos"/>
            </table:noData>
            <table:columns>
                <table:Column id="DR_idColumnMC" width="auto" filterProperty="CBP_UUID">
                    <Label id="DR_idLabelMC" text="MC"/>
                    <table:template>
                        <Link id="DR_idLabelTextMC" text="{CBP_UUID}" press="onViewDrivers"/>
                    </table:template>
                </table:Column>
                <table:Column id="DR_idColumnDrivers" filterProperty="TBP_UUID">
                    <Label id="DR_idLabelDrivers" text="Drivers"/>
                    <table:template>
                        <Label id="DR_idLabelTextDrivers" text="{TBP_UUID}"/>
                    </table:template>
                </table:Column>
                <table:Column id="DR_idColumnAddress" filterProperty="CFRMTD_PSTL_ADDR">
                    <Label id="DR_idLabelAddress" text="Address"/>
                    <table:template>
                        <Label id="DR_idLabelTextAddress" text="{CFRMTD_PSTL_ADDR}"/>
                    </table:template>
                </table:Column>
                <table:Column id="DR_idColumnNPhone" filterProperty="CPHONE_NR">
                    <Label id="DR_idLabelNPhone" text="Phone"/>
                    <table:template>
                        <Label id="DR_idLabelTextPhone" text="{CPHONE_NR}"/>
                    </table:template>
                </table:Column>
                <table:Column id="DR_idColumnContact" filterProperty="CONTACT">
                    <Label id="DR_idLabelContact" text="Contact"/>
                    <table:template>
                        <Label id="DR_idLabelTextContact" text="{CONTACT}"/>
                    </table:template>
                </table:Column>
                <table:Column id="DR_idColumnLPMEmail" filterProperty="CEMAIL_URI">
                    <Label id="DR_idLabelLPMEmail" text="Email"/>
                    <table:template>
                        <Label id="DR_idLabelTextLPMEmail" text="{CEMAIL_URI}"/>
                    </table:template>
                </table:Column>
                <table:Column id="DR_idColumnCountry" filterProperty="TCOUNTRY_CODE">
                    <Label id="DR_idLabelCountry" text="Country"/>
                    <table:template>
                        <Label id="DR_idLabelTextCountry" text="{TCOUNTRY_CODE}"/>
                    </table:template>
                </table:Column>
                <table:Column id="DR_idColumnStatus" filterProperty="TSTATUS">
                    <Label id="DR_idLabelStatus" text="Status"/>
                    <table:template>
                        <Label id="DR_idLabelTextStatus" text="{TSTATUS}"/>
                    </table:template>
                </table:Column>
                
               
               
               
            </table:columns>
        </table:Table>
    </App>
</mvc:View>